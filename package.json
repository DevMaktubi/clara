{
  "name": "clara",
  "version": "1.0.0",
  "description": "CLARA — Classificador Leve e Automático de Recursos Arquivísticos",
  "type": "module",
  "main": "src/main/index.js",
  "author": {
    "name": "Breno Luiz",
    "email": "brenoluiz1@gmail.com"
  },
  "artifactName": "CLARA-${version}-${os}.${ext}",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devmaktubi/clara.git"
  },
  "homepage": "https://github.com/devmaktubi/clara",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder -mwl"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.clara.app",
    "productName": "CLARA",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": ["nsis", "zip"]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
